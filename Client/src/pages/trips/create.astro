---
import Layout from "../../layouts/Layout.astro";
import { CreateTripForm } from "../../components/forms/CreateTripForm";
---

<Layout title="Create Trip - Trivare">
  <div class="container mx-auto p-6">
    <div class="mb-6">
      <button
        onclick="window.location.href = '/'"
        class="text-sm text-muted-foreground hover:text-foreground flex items-center gap-2"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="16"
          height="16"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path d="m15 18-6-6 6-6"></path>
        </svg>
        Back to Dashboard
      </button>
    </div>

    <CreateTripForm client:load />
  </div>

  <script>
    // Client-side authentication check import {requireAuth} from "@/lib/auth"; requireAuth();
  </script>
</Layout>
